<resources>

    <!--Final, top-level theme-->
    <style name="Theme.BlablacarBus.DayNight" parent="Theme.BlablacarBus.Dark" />

    <!-- Base application theme. -->
    <style name="Theme.BlablacarBus.Dark" parent="Theme.BlablacarBus">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnight_green</item>
        <item name="colorPrimaryVariant">@color/olympic_blue</item>
        <item name="colorOnPrimary">@color/inchworm</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/midnight_green</item>
        <item name="colorSecondaryVariant">@color/dusk_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Common brand color. -->
        <item name="colorAccent">@color/dusk_green</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/inchworm</item>
        <item name="colorOnError">@color/alice_blue</item>

    </style>
</resources>